---
import { SEO } from "astro-seo"
import Footer from '../components/Footer.astro'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<SEO
			title="Generate iCalendar Format Invitations for Free wA heavily optimized description full of well-researched keywords.ith Our Online Tool - Plan Your Events with Ease!"
			description="Looking for a Free Online Tool to Generate iCalendar Format Invitation Files? Look No Further! Our Easy-to-Use iCalendar Generator Allows You to Create Invitations in a Snap. Plan Your Events with Confidence Using Our User-Friendly and Reliable Tool. Generate iCalendar Invitations for Meetings, Appointments, and Events with Customizable Options. Say Goodbye to Manual Invitation Creation - Try Our Efficient and Convenient iCalendar Generator Now! Keywords: Free online tool, iCalendar format, invitation files, generate, meetings, appointments, events, customizable options, user-friendly, reliable, plan events, iCalendar generator, efficient, convenient."
			openGraph={{
				basic: {
					title: "Free online tool to generate iCalendar format invitation files",
					type: "An online tool",
					image: "image.png",
				}
			}}
			twitter={{
				creator: "@PiotrDoHack"
			}}
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #94cddb;
	}
	body {
		margin: 0;
		display: flex;
		flex-direction: column;
		height: 100vh;
		justify-content: sp;
	}
</style>
